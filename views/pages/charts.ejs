<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Dashboard</h1>

        <div class="row">
            <div class="col-md-6">
                <h3>Quantas Dailies por Turma</h3>
                <canvas id="dailiesByTurmaChart"></canvas>
            </div>
            <div class="col-md-6">
                <h3>Quantas Dailies por Aluno</h3>
                <select id="turmaSelect" class="form-select mb-3">
                    <option value="">Selecione uma Turma</option>
                </select>
                <canvas id="dailiesByAlunoChart"></canvas>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Função para obter a quantidade de dailies por turma
        async function fetchDailiesByTurma() {
            const response = await fetch('/listDailiesByTurma');
            return response.json();
        }

        // Função para obter a quantidade de dailies por aluno para uma turma específica
        async function fetchDailiesByAluno(turma) {
            const response = await fetch(`/listDailiesByAluno/${turma}`);
            return response.json();
        }

        // Inicializa o gráfico de dailies por turma
        async function initDailiesByTurmaChart() {
            const data = await fetchDailiesByTurma();
            const ctx = document.getElementById('dailiesByTurmaChart').getContext('2d');
            const labels = data.map(item => item.turma);
            const counts = data.map(item => item.dailies_count);

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Dailies por Turma',
                        data: counts,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    onClick: (event, elements) => {
                        if (elements.length > 0) {
                            const index = elements[0].index;
                            const turma = labels[index];
                            updateDailiesByAlunoChart(turma);
                        }
                    }
                }
            });

            const turmaSelect = document.getElementById('turmaSelect');
            labels.forEach(turma => {
                const option = document.createElement('option');
                option.value = turma;
                option.textContent = turma;
                turmaSelect.appendChild(option);
            });
        }

        // Inicializa o gráfico de dailies por aluno
        async function initDailiesByAlunoChart() {
            const ctx = document.getElementById('dailiesByAlunoChart').getContext('2d');
            window.dailiesByAlunoChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Dailies por Aluno',
                        data: [],
                        backgroundColor: 'rgba(153, 102, 255, 0.2)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                }
            });
        }

        // Atualiza o gráfico de dailies por aluno
        async function updateDailiesByAlunoChart(turma) {
            const data = await fetchDailiesByAluno(turma);
            const labels = data.map(item => item.email);
            const counts = data.map(item => item.dailies_count);

            window.dailiesByAlunoChart.data.labels = labels;
            window.dailiesByAlunoChart.data.datasets[0].data = counts;
            window.dailiesByAlunoChart.update();
        }

        // Inicializa os gráficos quando a página é carregada
        window.onload = async () => {
            await initDailiesByTurmaChart();
            await initDailiesByAlunoChart();

            const turmaSelect = document.getElementById('turmaSelect');
            turmaSelect.addEventListener('change', (event) => {
                const turma = event.target.value;
                if (turma) {
                    updateDailiesByAlunoChart(turma);
                }
            });
        };
    </script>
</body>
</html>
